# Database Configuration
DB_HOST={{ authentik_db_host }}
DB_NAME={{ authentik_db_name }}
DB_USER={{ authentik_db_user }}
DB_PASS={{ authentik_db_password }}

# Authentik Configuration
AUTHENTIK_SECRET_KEY={{ authentik_secret_key }}
AUTHENTIK_ERROR_REPORTING__ENABLED={{ authentik_error_reporting | default('false') }}

# SMTP Configuration
AUTHENTIK_EMAIL__HOST={{ smtp_host }}
AUTHENTIK_EMAIL__PORT={{ smtp_port | default('587') }}
AUTHENTIK_EMAIL__USERNAME={{ smtp_username }}
AUTHENTIK_EMAIL__PASSWORD={{ smtp_password }}
AUTHENTIK_EMAIL__USE_TLS={{ smtp_use_tls | default('true') }}
AUTHENTIK_EMAIL__USE_SSL={{ smtp_use_ssl | default('false') }}
AUTHENTIK_EMAIL__TIMEOUT=10
AUTHENTIK_EMAIL__FROM={{ smtp_from_address }}

# System Configuration
PUID={{ docker_puid | default('1000') }}
PGID={{ docker_pgid | default('1000') }}
TZ={{ timezone | default('UTC') }}
DOMAIN={{ domain_name }}

AUTHENTIK_COOKIE_DOMAIN={{ domain_name }}
AUTHENTIK_LOG_LEVEL={{ authentik_log_level | default('warning') }}
